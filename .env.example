# .env.example
# --------------------------------------------------------
# Application port (port where the Node.js app will run)
PORT=3000

# MySQL root user password (change this before running in production)
DB_ROOT_PASSWORD=change_me_root_pwd

# MySQL database and user credentials
DB_NAME=score_db
DB_USER=score_user
DB_PASSWORD=change_me_user_pwd

# MySQL port inside Docker (default: 3306)
DB_PORT=3306
